<main class="my-5">
    <section>
        <div class="container">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="p-0 m-0">Consulte os processos</h1>
                    <a href="/admin/register-process" class="btn btn-success">ADICIONAR NOVO <b>+</b></a>
                </div>
                
                <div class="card-header">
                    <form method="GET" class="d-flex align-items-center gap-2">
                        <div class="w-25">
                            <label for="">Data de criação:</label>
                            <select name="sort" id="sort" class="form-select">
                                <option value=""></option>
                                <option value="-1">Decrescente</option>
                                <option value="1">Crescente</option>
                            </select>
                        </div>

                        <div class="w-25">
                            <label>Limite por página:</label>
                            <select name="limit" id="limit" class="form-select">
                                <option value=""></option>
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>
                        </div>
                        <input type="submit" value="Filtar" class="btn btn-primary">
                    </form>
                </div>
                <div class="card-body d-flex justify-content-center flex-row flex-wrap">
                    {{#each processes}}
                        <div class="my-2 px-2 py-4 border border-secondary rounded w-100">
                            <div class="w-100">
                                <p class="p-0 m-0">Número do processo:</p>
                                <p>{{numberProcess}}</p>
                                <hr>
                                <p class="p-0 m-0">Nome do cliente:</p>
                                <p>{{relatedClient.name}}</p>
                                <hr>
                                <p class="p-0 m-0">Código:</p>
                                <p>{{code}}</p>
                                <hr>
                                <p class="p-0 m-0">Comentários:</p>
                                <p>{{comments}}</p>
                            </div>
                            <div class="d-flex flex-row gap-5 w-50">
                                <a href="/admin/edit-process/{{_id}}" class="btn btn-success w-25">Atualizar</a>
                                <a href="/admin/delete-process/{{_id}}" class="btn btn-danger w-25">Excluir</a>
                            </div>
                        </div>
                    {{else}}
                        <h3> Não há registro de processos</h3>
                    {{/each}}
                    <div class="d-flex flex-row my-2">
                        {{#pages}}
                            {{{element}}}
                        {{else}}
                            <button class="btn btn-outline-secondary mx-2">1</button>
                        {{/pages}}
                    </div>
                    
                </div>
            </div>
        </div>
    </section>
</main>