<main class="my-5">
    <section>
        <div class="container">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="p-0 m-0">Consulte os clientes</h1>
                    <a href="/admin/register-client" class="btn btn-success">ADICIONAR NOVO <b>+</b></a>
                </div>
                <div class="card-body d-flex justify-content-around flex-row flex-wrap">
                    {{#each clients}}
                        <div class="my-2 p-2 border border-secondary rounded w-100">
                            <p class="p-0 m-0">Nome:</p>
                            <p>{{name}}</p>
                            <hr>
                            <p class="p-0 m-0">E-mail:</p>
                            <p>{{email}}</p>
                            <hr>
                            <p class="p-0 m-0">País:</p>
                            <p>{{country}}</p>
                            <hr>
                            <a href="" class="btn btn-warning">Editar</a>
                            <a href="" class="btn btn-danger">Excluir</a>
                        </div>
                    {{else}}
                        <h3> Não há registro de processos</h3>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
</main>