<style>
    .card-body {
        height: 80vh !important;
    }
</style>
<main class="my-5">
    <section>
        <div class="container">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="p-0 m-0">Consulte os clientes</h1>
                    <a href="/admin/register-client" class="btn btn-success">ADICIONAR NOVO <b>+</b></a>
                </div>
                <div class="card-body overflow-auto d-flex justify-content-around flex-row flex-wrap">
                    {{#each clients}}
                        <div class="my-2 px-2 py-4 border border-secondary rounded w-100">
                            <div class="w-100">
                                <p class="p-0 m-0">Nome:</p>
                                <p>{{name}}</p>
                                <hr>
                                <p class="p-0 m-0">E-mail:</p>
                                <p>{{email}}</p>
                                <hr>
                                <p class="p-0 m-0">País:</p>
                                <p>{{country}}</p>
                                <div class="d-flex flex-row gap-5 w-50">
                                    <a href="/admin/edit-client/{{_id}}" class="btn btn-warning w-25">Editar</a>
                                    <a href="/admin/delete-client/{{_id}}" class="btn btn-danger w-25">Excluir</a>
                                </div>
                            </div>
                        </div>
                    {{else}}
                        <h3> Não há registro de processos</h3>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
</main>