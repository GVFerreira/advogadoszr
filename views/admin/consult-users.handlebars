<style>
    .card-body {
        height: 80vh !important;
    }
</style>
<main class="my-5">
    <section>
        <div class="container">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="p-0 m-0">Consulte os usuários</h1>
                    <a href="/admin/register-user" class="btn btn-success">ADICIONAR NOVO <b>+</b></a>
                </div>
                <div class="card-body overflow-auto d-flex flex-row justify-content-center flex-wrap">
                    {{#each users}}
                    <div class="w-100">
                        <div>
                            <h3 class="p-0 mb-1">Nome: {{name}}</h3>
                            <p class="mb-1">E-mail: {{email}}</p>
                            <p class="mb-1">Data de criação: {{#formatDate createdAt}}{{/formatDate}}</p>
                        </div>
                        <div class="d-flex gap-3 mt-3 w-50">
                            <a href="/admin/edit-user/{{_id}}" class="btn btn-warning w-25">Editar</a>
                            <a href="/admin/delete-user/{{_id}}" class="btn btn-danger w-25">Excluir</a>
                        </div>
                        <hr>
                    </div>
                    {{else}}
                        <h3>Não há registro de usuários</h3>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
</main>